datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  ip         String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  account    String   @unique
  email      String?  @unique
  twitter    Twitter?
  discord    String?  @unique
  ens        String?  @unique
  role       Role     @default(PLAYER)
  active     Boolean  @default(true)
  ipinfo     IpInfo?
  clientInfo String?
  verifyHash String?
  verifySalt String?
}

model IpInfo {
  id        String  @id @default(uuid())
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String  @unique
  ip        String?
  hostname  String?
  country   String?
  city      String?
  region    String?
  loc       String?
  org       String?
  postal    String?
  timezone  String?
  userAgent String?
}

model Twitter {
  id               String    @id @default(uuid())
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String    @unique
  profileImageUrl  String?
  name             String?   @unique
  twitterId        String?   @unique
  username         String?   @unique
  followersCount   Int?
  followingCount   Int?
  tweetCount       Int?
  location         String?
  twitterCreatedAt DateTime?
}

enum Role {
  PLAYER
  ADMIN
  ROOT
}

model BlackList {
  id      String  @id @default(uuid())
  ip      String  @unique
  account String?

  @@index([ip], type: Hash)
}
