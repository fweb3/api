{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["server/**/*", "bots/**/*", "tmp/app.ts", "tmp/utils.ts", "tmp/game.ts", "tmp/commands.ts"],
  "exclude": ["tmp/**/*"]
}
